import { useState, useEffect } from 'react';
import { Button } from '../components/ui/button';
import { Badge } from '../components/ui/badge';
import { Card } from '../components/ui/card';
import { AlertTriangle, Flame, CheckCircle } from 'lucide-react';
import { detectionService } from '../services/detectionService';

export function Alerts() {
  const [fireDetections, setFireDetections] = useState<any[]>([]);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    detectionService.startFireDetection();
    
    const unsubscribe = detectionService.subscribe((stats) => {
      setFireDetections(stats.fireDetections);
      setLoading(false);
    });

    return () => {
      unsubscribe();
    };
  }, []);

  if (loading) {
    return (
      <div className="p-6 flex items-center justify-center min-h-screen">
        <div className="text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"></div>
          <p className="text-slate-600">Loading alerts...</p>
        </div>
      </div>
    );
  }

  return (
    <div className="p-4 lg:p-6 space-y-6">
      <div className="flex flex-col lg:flex-row lg:items-center justify-between gap-4">
        <div>
          <h1 className="text-xl lg:text-2xl font-bold text-slate-900">Fire Detection Alerts</h1>
          <p className="text-sm lg:text-base text-slate-500">Real-time fire detection monitoring (&gt;40% confidence threshold)</p>
        </div>
        <div className="flex items-center gap-2">
          <Badge variant="outline" className={fireDetections.length > 0 ? "bg-red-50 text-red-600 border-red-200 py-2 px-4" : "bg-green-50 text-green-600 border-green-200 py-2 px-4"}>
            {fireDetections.length} Active Alert{fireDetections.length !== 1 ? 's' : ''}
          </Badge>
        </div>
      </div>

      <div className="space-y-4">
        {fireDetections.length > 0 ? (
          fireDetections.map((detection, idx) => (
            <Card key={idx} className="p-6 bg-red-50 border-red-200">
              <div className="flex items-start justify-between">
                <div className="flex items-start gap-4">
                  <div className="p-3 bg-red-100 rounded-lg">
                    <Flame className="h-6 w-6 text-red-600" />
                  </div>
                  <div>
                    <div className="flex items-center gap-2 mb-2">
                      <h3 className="text-lg font-semibold text-red-900">Fire Detected</h3>
                      <Badge variant="destructive">
                        {Math.round(detection.confidence * 100)}% Confidence
                      </Badge>
                    </div>
                    <div className="space-y-1 text-sm text-red-800">
                      <p><strong>Location:</strong> {detection.location}</p>
                      <p><strong>Camera:</strong> {detection.cameraId}</p>
                      <p><strong>Detected:</strong> {new Date(detection.timestamp).toLocaleString()}</p>
                    </div>
                  </div>
                </div>
                <Button variant="destructive" size="sm">
                  <AlertTriangle className="h-4 w-4 mr-2" />
                  Emergency Response
                </Button>
              </div>
            </Card>
          ))
        ) : (
          <Card className="p-12 text-center">
            <CheckCircle className="h-16 w-16 text-green-500 mx-auto mb-4" />
            <h3 className="text-xl font-semibold text-slate-900 mb-2">All Clear</h3>
            <p className="text-slate-600">No fire detections at this time</p>
            <p className="text-sm text-slate-500 mt-2">
              System is actively monitoring all cameras for fire and smoke
            </p>
          </Card>
        )}
      </div>

      <Card className="p-6 bg-blue-50 border-blue-200">
        <div className="flex items-start gap-3">
          <AlertTriangle className="h-5 w-5 text-blue-600 mt-0.5" />
          <div>
            <h3 className="font-semibold text-blue-900 mb-1">Detection Information</h3>
            <p className="text-sm text-blue-800">
              Fire detection system monitors all cameras every 5 seconds. Only alerts with confidence above 40% are displayed.
              Lower confidence detections are filtered out to reduce false positives.
            </p>
          </div>
        </div>
      </Card>
    </div>
  );
}